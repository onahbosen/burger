<div class="container">
    <section id="page-name">
        <iframe src="https://giphy.com/embed/FzTn2m2AGxehi" width="480" height="348" frameBorder="0" class="giphy-embed" allowFullScreen></iframe><p><a href="https://giphy.com/gifs/3d-food-drink-burger-FzTn2m2AGxehi">via GIPHY</a></p>
        <h1>eat da burger</h1>
    </section>

    <section class="row">
        <div class="col-md-4">
            <h1>eat da burger</h1>
            <table>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block}}
                    {{/unless}}
                {{/each}}
            </table>
        </div>
        <div class="md-col-4">
            <form class="create-form">
                <div class="form-group">
                    <label for="name"></label>
                    <textarea id="name" name="burger-name" rows="2" cols="40" placeholder="What do you want to eat?"></textarea>
                </div>
                <button type="submit">add burger</button>
            </form>
        </div>
        <div class="col-md-4">
            <h1>ate da burger</h1>
            {{#each burgers}}
                {{#if devoured}}
                    <div>{{id}}. {{burger_name}}</div>
                {{/if}}
            {{/each}}
        </div>
    </section>
</div>